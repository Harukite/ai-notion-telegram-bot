# Telegram Bot API Token - 从 BotFather 获取
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TARGET_CHAT_ID=your_target_chat_id_here
# Notion API Token - 从 https://www.notion.so/my-integrations 获取
NOTION_API_TOKEN=your_notion_api_token_here

# Notion Database ID - 从您的 Notion 数据库 URL 获取
# URL 格式: https://www.notion.so/{workspace_name}/{database_id}?v={view_id}
NOTION_DATABASE_ID=your_notion_database_id_here

# DeepSeek API Key - 从 DeepSeek 开发者门户获取
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Twitter/X API 配置 - 从 https://developer.twitter.com/ 获取
# 备用方案：当网页抓取失败时使用官方API获取推文信息
TWITTER_API_KEY=your_twitter_api_key_here           # 也称为 CONSUMER_KEY
TWITTER_API_SECRET=your_twitter_api_secret_here     # 也称为 CONSUMER_SECRET
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# 是否启用 Twitter API (true/false)
USE_TWITTER_API=false

# DeepSeek API 高级配置选项
DEEPSEEK_API_TIMEOUT=60        # API请求超时时间（秒）
DEEPSEEK_API_MAX_RETRIES=3     # 失败时最大重试次数
DEEPSEEK_API_RETRY_DELAY=5     # 初始重试延迟（秒），每次重试会加倍

